{
  "$schema": "https://schemas.tauri.app/config/2/capability-schema.json",
  "identifier": "default",
  "description": "Default capabilities for Promps application",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "dialog:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "dialog:allow-message",
    "dialog:allow-ask",
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [{ "path": "**" }]
    },
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [{ "path": "**" }]
    },
    {
      "identifier": "fs:allow-exists",
      "allow": [{ "path": "**" }]
    }
  ]
}
